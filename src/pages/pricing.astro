---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import Price from '../components/blocks/pricing/PricingColumns.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'
import FAQ from '../components/blocks/FAQ/Basic.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import Feature from '../components/blocks/features/FeatureList.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - SEO
const SEO = {
	title: 'podcast4.me | Affordable AI Podcast Creation Plans',
	description:
		'Find the perfect AI podcast creation plan for your content needs. Create professional podcasts in minutes with no experience required. All plans include our powerful AI technology with a 30-day satisfaction guarantee.'
}
// - Page Header
const header = {
	title: 'Simple pricing for your <strong>podcasting journey</strong>',
	text: 'All plans include our AI podcast creation technology with a 30-day satisfaction guarantee.'
}
// - Testimonial data
import testimonialBackground from '../assets/testimonial-bg-02.webp'
const testimonialData = {
	blockquote:
		'podcast4.me transformed how I create content. I went from zero podcasting experience to launching a professional show in one afternoon. The AI technology is revolutionary for content creators like me.',
	figcaption: 'Sarah Martinez',
	cite: 'Content Creator & Podcast Host'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Price />
	<!-- <SocialProof /> -->
	<!-- <Feature /> -->
	<Testimonial
		bg={testimonialBackground}
		bgPosition="left"
		blockquote={testimonialData.blockquote}
		figcaption={testimonialData.figcaption}
		cite={testimonialData.cite}
	/>
	<FAQ classes="bg-slate-50 dark:bg-neutral-900/40" />
	<CTA />
</Layout>
