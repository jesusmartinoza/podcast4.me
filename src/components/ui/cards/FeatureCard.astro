---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: The link to the blog post
// Reference: https://wind-ui.com/components/cards/

// Components
// - UI
import Card from './BasicCard.astro'

// Props
type Props = {
	title?: string
	subtitle?: string
	image?: any
	link?: string
}
const { title, subtitle, image, link } = Astro.props
---

<Card
	title={title}
	subtitle={subtitle}
	titleSize="xl"
	link={link}
	image={image}
	type="image-bottom"
	classes="!bg-white !border-4 !border-black h-full justify-between !shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:!shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all dark:!bg-neutral-900 dark:!border-white"
/>
