---
// Basic Dark Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta-dark-bg.webp'
import badge from '../../../assets/badge.svg'
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Transform Your Ideas Into Professional Podcasts Today"
				text="Join thousands of content creators who've revolutionized their podcasting workflow with our AI-powered platform. Create your first professional podcast in minutes, no experience needed!"
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<Image src={badge} alt="Beta Access" class="h-12 w-12" slot="button" />
					<span class="hidden md:block">Exclusive Beta Testing,</span>
					<Highlight classes="md:ml-2"> Limited Spots Available </Highlight>
				</ChipNotification>
				<Button size="lg" style="primary"> Create your first AI podcast </Button>
			</CTA>
		</Col>
		<Col span="1" />
	</Row>
</Section>
