---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import ShowcaseVideos from './ShowcaseVideos.astro'
import CTAButton from '../../ui/CTAButton.astro'
import AvatarGroup from '../../ui/AvatarGroup.astro'
import { SignedIn, SignedOut, UserButton, SignInButton } from '@clerk/astro/components'
// Content
// - Hero Image
import heroImage from '../../../assets/hero-01.png'
// - Avatars
import user1 from '../../../assets/avatars/avatar-01.webp'
import user2 from '../../../assets/avatars/avatar-02.webp'
import user3 from '../../../assets/avatars/avatar-03.webp'
const avatars = [
	{ image: { src: user1.src, alt: 'user name' }, link: '/' },
	{ image: { src: user2.src, alt: 'user name' }, link: '/' },
	{ image: { src: user3.src, alt: 'user name' }, link: '/' }
]
---

<Section id="intro" padding="top" classes="bg-neutral-50 dark:bg-neutral-900">
	<Row>
		<Col span="2" />
		<Col span="8" align="center">
			<ChipNotification radius="rounded-full" classes="mb-6">
				<strong class="mr-1">10K+</strong> creators boosting reach with viral clips
				<AvatarGroup avatars={avatars} radius="rounded-full" slot="button" />
			</ChipNotification>
			<h1>Create <strong>Viral Podcast Clips</strong> with AI in minutes</h1>

			<p class="pb-0 text-lg">
				Generate high-quality podcasts effortlessly with our AI platform. From script creation to
				audio production, podcast4.me makes professional podcasting accessible to everyone,
				regardless of experience.
			</p>
			<SignedOut>
				<SignInButton mode="modal" fallbackRedirectUrl="/app">
					<CTAButton text="Create Your First Clip Free" color="primary" />
				</SignInButton>
			</SignedOut>
			<SignedIn>
				<CTAButton text="Create Your First Clip Free" href="/app" color="primary" />
			</SignedIn>
		</Col>
		<Col span="2" />
		<Col span="2" />
		<Col span="8" classes="mt-8">
			<ShowcaseVideos />
		</Col>
		<Col span="2" />
	</Row>
</Section>
